
@{
    ViewBag.Title = "_DatosUsuario";
}

<h2>Datos de usuario</h2>
<main>
    <div class="row">
        <table class="table table-striped table-hover">
            @foreach (var item in ViewBag.Usuario)
            {
                <tbody>
                    <tr>
                        <td>Tipo Documento</td>
                        <td>@item.tipodocumento</td>
                    </tr>
                    <tr>
                        <td>N° Documento</td>
                        <td>@item.idUsuario</td>
                    </tr>
                    <tr>
                        <td>Nombre</td>
                        <td>@item.nombre @item.apellido</td>
                    </tr>
                    <tr>
                        <td>Edad</td>
                        <td>@item.edad</td>
                    </tr>
                    <tr>
                        <td>Fecha de nacimiento</td>
                        <td>@item.fecaNacido</td>
                    </tr>
                    <tr>
                        <td>Estado civil</td>
                        <td>@item.estadoCivil</td>
                    </tr>
                    <tr>
                        <td>Aseguradora</td>
                        <td>@item.aseguradora</td>
                    </tr>
                    <tr>
                        <td>Direccion</td>
                        <td>@item.direccion</td>
                    </tr>
                    <tr>
                        <td>Telefono</td>
                        <td>@item.telefono</td>
                    </tr>
                    <tr>
                        <td>Ocupacion</td>
                        <td>@item.ocupacion</td>
                    </tr>
                    <tr>
                        <td>Genero</td>
                        <td>@item.genero</td>
                    </tr>
                    <tr>
                        <td>Municipio</td>
                        <td>@item.municipio</td>
                    </tr>
                    <tr>
                        <td>Departamento</td>
                        <td>@item.departamento</td>
                    </tr>
                    <tr>
                        <td>Fecha de atencion</td>
                        <td>@item.fechaAtencion</td>
                    </tr>
                    <tr>
                        <td>Acudiente</td>
                        <td>@item.acudiente</td>
                    </tr>
                    <tr>
                        <td>Observaciones</td>
                        <td>@item.observaciones</td>
                    </tr>
                </tbody>
                using (Html.BeginForm("Fotos", "Lista", FormMethod.Get))
                {
                    <tfoot>
                        <tr>
                            <td colspan="2">
                                <a href="@Url.Action("Fotos", "Lista", new { id = @item.idUsuario })" class="text-decoration-none">
                                    <center>
                                        <p class="text-black">
                                            <img src="~/Content/Images/showImages.svg" style="width: 30px;" />
                                        </p>
                                    </center>
                                </a>
                            </td>
                        </tr>
                    </tfoot>
                }
            }
        </table>
    </div>
</main>