
@{
    ViewBag.Title = "CargarImagen";
}
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#buscar').select2();
        });
    </script>

}

<h2>CARGAR FOTOS</h2>
<br />
<main>

    @if (ViewBag.Alert == "CARGADA FALLIDA")
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Alert
        </div>
    }
    @if (ViewBag.Alert == "CARGA EXITOSA")
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Alert
        </div>
    }
    @if (ViewBag.Alert == null)
    {

    }
    else
    {
        @ViewBag.Alert
    }

    @using(Html.BeginForm("AgregarFotos", "Registro", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <select class="form-select form-select-sm" aria-label="Ejemplo de .form-select-sm" name="IdUsuario" id="buscar">
        @foreach (var item in ViewBag.Usuario)
        {
            <option value="@item.idUsuario">@item.idUsuario - @item.nombre @item.apellido</option>
        }
    </select>

    <input id="input-b1" name="imgFile" type="file" class="file" data-browse-on-zone-click="true">
    <button type="submit" class="btn btn-primary">Guardar</button>
    }

</main>