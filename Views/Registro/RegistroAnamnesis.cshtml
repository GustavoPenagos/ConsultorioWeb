
@{
    ViewBag.Title = "RegistroAnamnesis";
}

<h2>RegistroAnamnesis</h2>

<main>
    @using (Html.BeginForm("InsertarAnamnesis", "Registro", FormMethod.Post))
    {
        <div class="container">
            <article>
                <header>
                    <h2>2. ANAMNESIS</h2>
                    <input type="text" value="@TempData["id"]" name="IdUsuario" hidden readonly />
                </header>
                <br />
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Motivo de consulta</span>
                                </div>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" cols="30" name="MotivoConsulta"></textarea>
                            </td>
                            <td>
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Historial de enfermedad actual</span>
                                </div>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" cols="30" name="EmferActual"></textarea>
                            </td>
                        </tr>
                    </thead>
                </table>
            </article>

            <table class="table table-striped">
                <tfoot>
                    <tr>
                        <td colspan="2">
                            <center><button type="submit" class="btn btn-primary" style="width:50%; ">Siguiente</button></center>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
</main>
