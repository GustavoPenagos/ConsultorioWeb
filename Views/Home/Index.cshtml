@{
    ViewBag.Title = "Home Page";
}

<main>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>N° Documento</td>
                    <td>Tipo Documento</td>
                    <td>Nombre</td>
                    <td>Edad</td>
                    <td>Sexo</td>
                    <td>Ciudad</td>
                    <td>Departamento</td>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in ViewBag.Usuario)
                    {
                        <tr>
                            <td>@item.id_Usuario</td>
                            <td>@item.tipodocumento</td>
                            <td>@item.nombre @item.apellido </td>
                            <td>@item.edad </td>
                            <td>@item.genero</td>
                            <td>@item.municipio</td>
                            <td>@item.departamento </td>
                            <td>
                                <a href="@Url.Action("metodo","controlador")">
                                    <img src="~/Content/Images/Edit.svg" />
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("EliminarUsuario","Home", new {id = item.id_Usuario})">
                                    <img src="~/Content/Images/Delete.svg" />
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("RegistrarCita","Registro", new {id = item.id_Usuario, nombre = item.nombre, })">
                                    <img src="~/Content/Images/addDate.svg" />
                                </a>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</main>